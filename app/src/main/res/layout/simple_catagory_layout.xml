<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/catagoryyImg"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/catagory_bg"
        android:padding="10dp"
        app:tint="@android:color/white"
        android:foregroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chart" />

    <TextView
        android:id="@+id/catagoryy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catagory"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/catagoryyImg"
        app:layout_constraintStart_toStartOf="@+id/catagoryyImg"
        app:layout_constraintTop_toBottomOf="@+id/catagoryyImg" />
</androidx.constraintlayout.widget.ConstraintLayout>